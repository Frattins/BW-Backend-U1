@model CartDetailsViewModel

<table class="table">
    <thead>
        <tr>
            <th scope="col">Nome prodotto</th>
            <th scope="col">Descrizione</th>
            <th scope="col">Categoria</th>
            <th scope="col">Prezzo</th>
            <th scope="col">Quantità</th>
            <th scope="col">Subtotale</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model.Items)
        {
            <tr>
                <td>@detail.NameProd</td>
                <td>@detail.DescriptionProd</td>
                <td>@detail.Category</td>
                <td>@detail.Price &#8364;</td>
                <td>@detail.quantita</td>
                <td>@(detail.Price * detail.quantita) &#8364;</td>
            </tr>
        }
    </tbody>
</table>
<div class="total">
    <h3>Totale Carrello: @Model.Total &#8364;</h3>
</div>