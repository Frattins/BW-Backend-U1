@model CartDetailsViewModel

<div class="d-flex mx-auto">
    <div class="text-start">
        <form method="post" asp-action="AtHome">
            <button type="submit" class="btn btn-trasparent">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8" />
                </svg>
            </button>
        </form>
    </div>
    <div class="col-12">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Nome prodotto</th>
                    <th scope="col">Descrizione</th>
                    <th scope="col">Categoria</th>
                    <th scope="col">Prezzo</th>
                    <th scope="col">Quantità</th>
                    <th scope="col">Quantità</th>
                    <th scope="col">Subtotale</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model.Items)
                {
                    <tr>
                        <td>@detail.NameProd</td>
                        <td>@detail.DescriptionProd</td>
                        <td>@detail.Category</td>
                        <td>@detail.Price &#8364;</td>
                        <td class="text-center">@detail.quantita </td>
                        <td>
                            <div class="d-flex">
                            <form method="post" asp-action="AggiungiItems">
                                <input type="hidden" name="IdProd" value="@detail.IdProd" />
                                    <input type="hidden" name="IdCart" value="@ViewBag.CartID" />
                                <button type="submit" class="btn btn-trasparent">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
                                    </svg>
                                </button>
                            </form>
                            <form method="post" asp-action="RimuoviItem">
                                <input type="hidden" name="IdProd" value="@detail.IdProd" />
                                <input type="hidden" name="IdCart" value="@ViewBag.CartID" />
                                <button type="submit" class="btn btn-trasparent">
                                     <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-dash-square" viewBox="0 0 16 16">
                                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                                        <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8" />
                                    </svg>
                                </button>
                            </form>
                            </div>
                        </td>
                        <td>@(detail.Price * detail.quantita) &#8364;</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="total">
            <h3>Totale Carrello: @Model.Total &#8364;</h3>
        </div>
    </div>
</div>
