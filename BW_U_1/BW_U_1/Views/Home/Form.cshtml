@model Products

<h2 class="my-4">Aggiungi un nuovo prodotto:</h2>

<form asp-action="BottoneForm" method="post">
    <div class="form-group">
        <label asp-for="NameProd" class="control-label"></label>
        <input asp-for="NameProd" class="form-control" />
        <span asp-validation-for="NameProd" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DescriptionProd" class="control-label"></label>
        <textarea asp-for="DescriptionProd" class="form-control"></textarea>
        <span asp-validation-for="DescriptionProd" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category" class="control-label"></label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Story" class="control-label"></label>
        <textarea asp-for="Story" class="form-control"></textarea>
        <span asp-validation-for="Story" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-outline-dark my-4">Aggiungi</button>
</form>

